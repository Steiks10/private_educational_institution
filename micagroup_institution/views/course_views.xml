<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="course_tree_view" model="ir.ui.view">
            <field name="name">course_tree_view</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="code"/>
<!--                    <field name="score"/>-->
                    <field name="subject_id"/>
                    <field name="limit_students"/>
                    <field name="current_inscribed"/>
<!--                    <field name="state"/>-->
                </tree>
            </field>
        </record>

        <record id="course_form_view" model="ir.ui.view">
            <field name="name">course_form_view</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <form string="Course">
<!--                    <header>-->
<!--                        <button name="action_write_note_to_student" class="oe_highlight" string="Change notes" type="object"/>-->
<!--                    </header>-->
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code"/>
<!--                                <field name="score"/>-->
                                <field name="subject_id"/>
                            </group>
                            <group>
                                <field name="limit_students"/>
                                <field name="current_inscribed"/>
                                <field name="teacher_id"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Classes" name="course_classes">
                                <field name="calendar_event_ids">
                                    <tree>
                                        <field name="start"/>
                                        <field name="stop"/>
                                        <field name="duration"/>
                                        <field name="rrule_type"/>
<!--                                        <field name="week_days"/>-->
                                        <field name="videocall_location"/>
                                        <field name="location" string="classroom"/>`
                                    </tree>
                                </field>
                            </page>
                            <page string="Students" name="student_in_course">
                                <field name="student_grade_ids">
                                    <kanban>
                                        <field name="id"/>
                                        <field name="student_id"/>
                                        <field name="student_id_email"/>
            <!--                            <field name="image"/>-->
                                        <templates>
                                            <t t-name="kanban-box">
                                                <div class="oe_kanban_card oe_kanban_global_click">
                                                    <div class="o_kanban_card_content d-flex">
                                                        <div>
                                                            <field name="student_id_image" widget="image" class="oe_avatar" alt="Avatar"/>
                                                        </div>
                                                        <div class="oe_kanban_details d-flex flex-column ms-3">
                                                            <strong class="o_kanban_record_title oe_partner_heading"><field name="student_id"/></strong>
                                                            <div class="d-flex align-items-baseline text-break" >
                                                                <i class="fa fa-envelope me-1" role="img" aria-label="Email" title="Email"/><field name="student_id_email"/>
                                                            </div>
                                                            <div class="o_kanban_tags_section"/>
                                                            <ul>
                                                                <li>Identification card: <field name="student_id_identification"/></li>
                                                                <li>Phone: <field name="student_id_phone"/></li>
<!--                                                                <li>Score: <field name="score"/></li>-->
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            </t>
                                        </templates>
                                    </kanban>

<!--                                    <tree>-->
<!--                                        <field name="name"/>-->
<!--                                        <field name="identification"/>-->
<!--                                        <field name="email"/>-->
<!--                                        <field name="phone"/>-->
<!--                                        <field name="gender"/>-->
<!--                                        <field name="enrollment_date"/>-->
<!--                                    </tree>-->
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_course_views" model="ir.actions.act_window" >
            <field name="name">Course Views</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">course.course</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>
    </data>
</odoo>