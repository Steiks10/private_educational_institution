<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="private_institution_res_config_settings" model="ir.ui.view">
            <field name="name">private_institution_res_settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Private Institution" string="Private Institution" data-key="private_institution">
                        <h2>Private Institution</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-lg-6 o_setting_box">
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Credit Unit</span>
                                    <div class="text-muted">
                                        Oh yeah, the credit unit
                                    </div>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label for="value_of_unit_credit" class="col-lg-3 o_light_label"/>
                                            <field name="value_of_unit_credit"/>
<!--                                            <field name="group_multi_currency" invisible="1"/>-->
                                        </div>
                                    </div>
                                </div>
<!--                                <div class="text-muted">-->
<!--                                    Define the value of credit unit-->
<!--                                </div>-->
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>

    </data>
</odoo>